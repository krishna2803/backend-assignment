<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User History</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        h1 {
            font-weight: bold;
            margin-bottom: 30px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            animation: fadeIn 0.5s ease;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
            transition: background-color 0.3s ease;
        }

        th {
            background-color: #343a40;
            color: #fff;
            font-weight: bold;
        }

        td input[type="checkbox"] {
            width: 25px;
            height: 25px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        td input[type="checkbox"]:checked {
            transform: scale(1.2);
        }

        tbody tr:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .status-approved {
            color: #28a745;
        }
        .status-denied {
            color: #ff2828;
        }
        .status-pending {
            color: #ffc107;
        }
        .status-returned {
            color: #007bff;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>User History</h1>
        <div class="mb-3">
            <button onclick="returnSelected()" class="btn btn-primary">Return Selected Books</button>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Book Title</th>
                    <th>Book Author</th>
                    <th>Book Genre</th>
                    <th>Requested On</th>
                    <th>Fine</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(request => { %>
                    <tr>
                        <td>
                            <input type="checkbox" name="selected_requests" value="<%= request.res_id %>" <% if (request.status !=='approved' || request.book_count <=0) { %> disabled <% } %>>
                        </td>
                        <td><%= request.book_title %></td>
                        <td><%= request.book_author %></td>
                        <td><%= request.book_genre %></td>
                        <td><%= request.start_time %></td>
                        <td><%= request.fine %></td>
                        <td class="status-<%= request.status %>"><strong><%= request.status.toUpperCase() %></strong></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        const returnSelected = () => {
            const selectedBooks = document.querySelectorAll('input[name="selected_requests"]:checked');
            const resIds = Array.from(selectedBooks).map(res => res.value);

            if (selectedBooks.length < 1) {
                alert('Please select at least one book to return.');
                return;
            }

            fetch('/books/return', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
