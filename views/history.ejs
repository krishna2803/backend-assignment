                    alert('Returned successfully!');
                    location.reload();
                } else {
                    alert('Failed to return selected books');
                }
            }).catch(err => {
                console.error('An error occurred. Contact Admin.');
            });
            location.reload();
        }
    </script>
</body>

</html>
