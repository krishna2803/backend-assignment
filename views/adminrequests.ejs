<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requests for Admin Role</title>
</head>
<body>
    <div>
        <button onclick="approveSelected()">Approve Selected</button>
        <button onclick="denySelected()">Deny Selected</button>
        <script>
            function approveSelected() {
                const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
                const userIds = Array.from(checkboxes).map(checkbox => checkbox.value);
