<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Requests for Admin Role</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/lists.css">
    <style>
        @media (max-width: 576px) {
            #back-button {
                display: none;
            }
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center my-4">Requests for Admin Role</h1>
        <a href="#" id='back-button' onclick="history.back()" class="btn btn-primary" onclick="history.back()">Back</a>

        <div class="mb-4 text-center">
            <button class="btn btn-success mr-2" onclick="approveSelected()">Approve Selected</button>
            <button class="btn btn-danger" onclick="denySelected()">Deny Selected</button>
        </div>
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Select</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Role</th>
                    <th>Request Status</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td> 
                        <input type="checkbox" value="<%= user.user_id %>" <% if (user.admin_request !== 'pending') { %> disabled <% } %>> 
                    </td>
                    <td> <%= user.user_name %> </td>
                    <td> <%= user.user_phone %> </td>
                    <td> <%= user.user_email %> </td>
                    <td> <%= user.user_address %> </td>
                    <td> <%= user.user_role %> </td>
                    <td> <%= user.admin_request %> </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <script>
        function approveSelected() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const userIds = Array.from(checkboxes).map(checkbox => checkbox.value);
            const url = '/admin/make';

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: userIds })
            })
            .then(response => {
                if (response.ok) {
                    // Handle success
                    alert('Approval successful');
                    location.reload();
                } else {
                    // Handle error
                    alert('Approval failed');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Some error occurred! Contact Admin.');
            });
        }

        function denySelected() {
            const checkboxes = document.querySelectorAll('input[type="checkbox"]:checked');
            const userIds = Array.from(checkboxes).map(checkbox => checkbox.value);
            const url = '/admin/deny';

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ id: userIds })
            })
            .then(response => {
                if (response.ok) {
                    // Handle success
                    alert('Request denied successfully');
                    location.reload();
                } else {
                    // Handle error
                    alert('Some error occurred! Contact Admin.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Some error occurred! Contact Admin.');
            });
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
